{
  "name": "crowous",
  "version": "0.1.0",
  "description": "A small wrapper around the public API for the CROUS' mobile application.",
  "repository": "github:LiterateInk/Crowous",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --dts --minify terser --clean --format cjs,esm --sourcemap",
    "release": "release-it",
    "lint": "tsc && eslint .",
    "tsx": "tsx"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "crous",
    "les-crous",
    "api",
    "restauration",
    "restaurant",
    "wrapper",
    "student",
    "university",
    "France"
  ],
  "author": "Mikkel RINGAUD <mikkel@milescode.dev> (https://github.com/Vexcited)",
  "homepage": "https://literate.ink/crowous",
  "bugs": {
    "url": "https://github.com/LiterateInk/Crowous/issues"
  },
  "license": "GPL-3.0",
  "engines": {
    "node": ">=18"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}",
      "tagAnnotation": "Release v${version}",
      "tagName": "js-v${version}"
    },
    "github": {
      "release": true,
      "draft": false,
      "releaseName": "js v${version}"
    },
    "npm": {
      "publish": true
    },
    "hooks": {
      "before:init": "pnpm lint",
      "after:bump": "pnpm build"
    }
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^2.1.0",
    "@typescript-eslint/parser": "^7.13.0",
    "eslint": "^8.57.0",
    "release-it": "^17.3.0",
    "terser": "^5.31.1",
    "tsup": "^8.1.0",
    "tsx": "^4.15.4",
    "typescript": "^5.4.5"
  }
}
